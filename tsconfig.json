{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],                                        
    "jsx": "react-jsx",                                
    "noEmit": true,                                                               
    "moduleResolution": "node",                       
    "allowUmdGlobalAccess": true,                     
    "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "isolatedModules": true,                          
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  }, 
  "include": ["src"]
}
